<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChatActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/llTextField" />
    <LinearLayout
        android:id="@+id/llTextField"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:weightSum="100" >
    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_marginLeft="2dp"
            android:id="@+id/btnheart"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/heart"
            android:visibility="gone"
            />
        <Button

            android:id="@+id/btnStartChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tìm"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/message_background_receive"
            android:layout_weight="10"
             />
        <Button
            android:layout_marginTop="8dp"
            android:id="@+id/btnEndChat"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:visibility="gone"
            android:background="@drawable/message_background_receive"
            android:text="Kết Thúc"
         />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnShowOptions"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_add_24"
            app:backgroundTint="@color/_bg__frame_1_ek1_color"
            android:onClick="showOptionsPopup"
        />



    </LinearLayout>
        <EditText
            android:id="@+id/messageBox"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/message_box_background"
            android:hint="@string/greeting"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:singleLine="false"
            />
        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/send"
            android:layout_weight="20"
            android:paddingLeft="10dp" />
    </LinearLayout>
</RelativeLayout>
