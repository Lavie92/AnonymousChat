<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.FormForgotActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnLogin2"
            android:layout_width="332dp"
            android:layout_height="51dp"
            android:layout_marginStart="164dp"
            android:layout_marginEnd="165dp"
            android:layout_marginBottom="112dp"
            android:background="@drawable/my_button"
            android:shadowColor="#9C27B0"
            android:text="Reset Password"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="#673AB7"
            app:strokeColor="#3F51B5" />

        <ImageView
            android:id="@+id/combined_shape"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:contentDescription="combined_shape3"
            android:src="@drawable/combined_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextText2"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="256dp"
            android:layout_height="49dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Confirm Your New Password"
            android:inputType="text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="462dp" />

        <EditText
            android:id="@+id/editTextText3"
            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="251dp"
            android:layout_height="56dp"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="86dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="Please Enter Your New Password"
            android:inputType="text"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="353dp" />

        <ImageView
            android:id="@+id/locked_padlock_outline_"
            android:layout_width="238dp"
            android:layout_height="160dp"
            android:contentDescription="locked_padlock_outline_2"
            android:src="@drawable/locked_padlock_outline_2"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="89dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="203dp"
            android:layout_marginBottom="14dp"
            android:text="Enter New  Password"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextText3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="99dp"
            android:layout_marginEnd="203dp"
            android:layout_marginBottom="14dp"
            android:text="Confirm New Password"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextText2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/combined_shape2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:contentDescription="combined_shape3"
        android:src="@drawable/combined_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>