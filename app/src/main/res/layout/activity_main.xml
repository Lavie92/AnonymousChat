<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/paymentBox"
            android:layout_width="156dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pay_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/press_start_2p"
                android:text="100"
                android:textColor="@color/gold_background"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/press_start_2p"
                android:text="coins"
                android:textColor="@color/gold_background"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:contentDescription="combined_shape_ek2"
            android:src="@drawable/setting" />

    </androidx.appcompat.widget.Toolbar>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="6dp"
        android:layout_marginRight="270dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/treaser" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="236dp"
        android:layout_height="157dp"
        android:elevation="6dp"
        android:layout_marginTop="500dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cat" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView3"
        android:layout_width="105dp"
        android:layout_height="157dp"
        android:elevation="6dp"
        android:layout_marginLeft="230dp"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout5"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cat5" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView1"
        android:layout_width="224dp"
        android:layout_height="85dp"
        android:layout_marginRight="230dp"
        android:layout_marginBottom="500dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cat2" />


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="412dp"
        android:layout_height="672dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <LinearLayout
            android:id="@+id/layoutRandomChat"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_random"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRandom"
                android:layout_width="98dp"
                android:layout_height="51dp"
                android:layout_gravity="top|left"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/random" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Random Chat"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNearestChat"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_nearest"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgNearest"
                android:layout_width="89dp"
                android:layout_height="52dp"
                android:layout_gravity="top|left"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/map" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Nearest Chat"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCountryMatch"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_nearest"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCountryMatch"
                android:layout_width="82dp"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/contrychat" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Country Match"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAIChat"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_ai"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgAI"
                android:layout_width="82dp"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ai" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="AI Chat"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutVoiceChat"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_nearest"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgVoiceChat"
                android:layout_width="82dp"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/audio" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Voice Chat"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTicTacToe"
            android:layout_width="311dp"
            android:layout_height="63dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_nearest"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgtictactoe"
                android:layout_width="127dp"
                android:layout_height="63dp"

                android:layout_weight="1"
                app:srcCompat="@drawable/game" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Game"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>