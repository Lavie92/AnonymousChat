<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="236dp"
        android:layout_height="157dp"
        android:layout_marginTop="620dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout5"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cat" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView3"
        android:layout_width="105dp"
        android:layout_height="157dp"
        android:elevation="6dp"
        android:layout_marginLeft="230dp"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout5"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout5"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cat5" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView1"
        android:layout_width="224dp"
        android:layout_height="85dp"
        android:layout_marginBottom="610dp"
        android:layout_marginRight="230dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/linearLayout5"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cat2" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="412dp"
        android:layout_height="672dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="10dp">
            <TextView
                android:id="@+id/coins"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:text="You have: 0"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/coinImage"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_coin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRandomChat"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_random"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgRandom"
                android:layout_width="98dp"
                android:layout_height="51dp"
                android:layout_gravity="top|left"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/random" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Random Chat"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutNearestChat"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_nearest"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgNearest"
                android:layout_width="89dp"
                android:layout_height="52dp"
                android:layout_gravity="top|left"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/map" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Nearest Chat"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCountryMatch"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_nearest"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCountryMatch"
                android:layout_width="82dp"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/contrychat" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Country Match"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAIChat"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_ai"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgAI"
                android:layout_width="82dp"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ai" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="AI Chat"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutVoiceChat"
            android:layout_width="311dp"
            android:layout_height="70dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_nearest"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgVoiceChat"
                android:layout_width="82dp"
                android:layout_height="58dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/audio" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Voice Chat"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTicTacToe"
            android:layout_width="311dp"
            android:layout_height="63dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_nearest"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgtictactoe"
                android:layout_width="90dp"
                android:layout_height="49dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/game" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="2"
                android:fontFamily="monospace"
                android:gravity="end"
                android:text="Game"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/rectangle_5"
        android:layout_width="410dp"
        android:layout_height="76dp"
        android:background="@drawable/rectangle_5_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="421dp"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:background="@drawable/border_text"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="407dp"
            android:layout_height="39dp"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:contentDescription="combined_shape_ek2"
            android:src="@drawable/setting" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>