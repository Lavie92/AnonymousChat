<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChatNearestActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/llTextField" />
    <LinearLayout
        android:id="@+id/llTextField"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:weightSum="100" >
        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_marginLeft="2dp"
                android:id="@+id/btnheart"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/heart"
                android:visibility="gone"
                />

            <Button
                android:layout_marginTop="8dp"
                android:id="@+id/btnEndChat"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:visibility="gone"
                android:background="@drawable/message_background_receive"
                android:text="Kết Thúc"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnShowOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:onClick="showOptionsPopup"
                app:backgroundTint="@color/purple_200"
                app:srcCompat="@drawable/baseline_add_24" />



        </LinearLayout>
        <EditText
            android:id="@+id/messageBox"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:background="@drawable/message_box_background"
            android:hint="@string/greeting"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:singleLine="false"
            />
        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/send"
            android:layout_weight="20"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnNearest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rcMessage"
        android:layout_centerInParent="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/border_chat"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgRandom2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/chat" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:gravity="end"
            android:text="Lẹt gô"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
