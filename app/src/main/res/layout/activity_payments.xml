<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fancy_background"
    android:orientation="vertical"
    tools:context=".exchanges.PaymentsActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/press_start_2p"
        android:text="PAYMENTS"
        android:textAlignment="center"
        android:textColor="@color/gold_background"
        android:textSize="35dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/pay10k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/pay_button"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/coins_10" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/press_start_2p"
            android:text="10.000VND"
            android:textAlignment="center"
            android:textColor="@color/gold_background"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay20k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pay_button"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/coins_20" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/press_start_2p"
            android:text="20.000VND"
            android:textAlignment="center"
            android:textColor="@color/gold_background"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay50k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pay_button"
        android:layout_margin="10dp"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/coins_50" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/press_start_2p"
            android:text="50.000VND"
            android:textAlignment="center"
            android:textColor="@color/gold_background"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pay100k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pay_button"
        android:layout_margin="10dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/coins_100" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="@font/press_start_2p"
            android:text="100.000VND"
            android:textAlignment="center"
            android:textColor="@color/gold_background"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>