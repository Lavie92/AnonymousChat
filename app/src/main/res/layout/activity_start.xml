<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".layout.StartActivity">

    <TextView
        android:id="@+id/hello__welcome_back3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Anonymous Chat"
        android:textColor="@color/hello__welcome_back_color"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/happy_to_see_you_again__to_use_your_account_please_login_first_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="48dp"
        android:text="chat with everyone"
        android:textColor="@color/hello__welcome_back_color"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dayflow_best_friends" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/my_button"
        android:shadowColor="#9C27B0"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>